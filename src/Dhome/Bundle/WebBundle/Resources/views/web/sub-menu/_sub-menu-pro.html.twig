{% extends 'DhomeWebBundle:web:layout-index.html.twig' %}

{% block body %}
    <div class="sub-menu-mb">
        <div class="card">
            <h3 class="card-header">PROJECTS</h3>
            <div class="card-block">
                <a href="{{ path('dhome_web_project_all_index') }}"><i class="fa fa-angle-right"></i>ALL PROJECTS</a>
                {% set projectSubmenus = dhome_project_submenu() %}

                {% if projectSubmenus|length %}
                    {% for r in projectSubmenus %}
                        <a href="{{ path('dhome_web_project_category_index', {'categoryId': r.id, 'categoryName': r.name}) }}">
                            <i class="fa fa-angle-right"></i>{{ r.name|upper }}</a>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
