{% extends 'DhomeWebBundle:web:layout.html.twig' %}

{% block content %}

    <div class="contact">
        <div class="contact__header">CONTACT US</div>
        <div class="contact__ct">
            <h4>DDHOMETH</h4>
            <p>This is a longer card with supporting text below as a natural lead-in</p>
            <div class="row contact__add">
                <div class="col-md-6">
                    <p>31/66666 title that wraps to a new line</p>
                    <p>title that new line</p>
                    <p>12190</p>
                </div>
                <div class="col-md-6 contact__tel">
                    <p><i class="fa fa-phone"></i>085-33304033</p>
                    <p><i class="fa fa-phone"></i>085-00004033</p>
                    <div class="contact__soc">
                        FOLLOW US:
                        <a><i class="fa fa-facebook"></i></a>
                        <a><i class="fa fa-twitter"></i></a>
                        <a><i class="fa fa-pinterest"></i></a>
                        <a><i class="fa fa-instagram"></i></a>
                    </div>

                </div>
            </div>
            <div class="row contact__form">
                <div class="col-md-6 contact__mailto">
                    <form id="contact_form" action="#" method="POST" enctype="multipart/form-data">
                        <div class="row">
                            <label for="name">Your name:</label><br />
                            <input id="name" class="input" name="name" type="text" value="" size="30" /><br />
                        </div>
                        <div class="row">
                            <label for="email">Your email:</label><br />
                            <input id="email" class="input" name="email" type="text" value="" size="30" /><br />
                        </div>
                        <div class="row">
                            <label for="message">Your message:</label><br />
                            <textarea id="message" class="input" name="message" rows="7" cols="30"></textarea><br />
                        </div>
                        <input id="submit_button" type="submit" value="Send email" />
                    </form>
                </div>
                <div class="col-md-6 contact__map">
                    <div id="googleMap" style="width:100%;height:380px;"></div>
                </div>
            </div>
        </div>


    </div>

{% endblock %}
