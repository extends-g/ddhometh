<div class="gallery">
    <div class="row">
        {% for i in 0..3 %}
            <div class="col-lg-4 col-sm-6 col-xs-12 gallery__tumbnail">
                <a data-toggle="modal" data-target=".bd-example-modal-lg">
                    <img class="img-fluid img-lazy" data-original="{{ asset('ui/web/img/h.jpg') }}">
                </a>
                <div class="gallery__tumbnail--desc">description shown here</div>
            </div>
            <div class="col-lg-4 col-sm-6 col-xs-12 gallery__tumbnail">
                <a href="">
                    <img class="img-fluid img-lazy" data-original="{{ asset('ui/web/img/a.jpg') }}">
                </a>
                <div class="gallery__tumbnail--desc">description shown here</div>
            </div>
            <div class="col-lg-4 col-sm-6 col-xs-12 gallery__tumbnail">
                <a href="">
                    <img class="img-fluid img-lazy" data-original="{{ asset('ui/web/img/b.jpg') }}">
                </a>
                <div class="gallery__tumbnail--desc">description shown here</div>
            </div>
        {% endfor %}
    </div>

    <div class="gallery__modal modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="row">
                    <div class="col-md-8">
                        <img class="img-fluid " src="{{ asset('ui/web/img/b.jpg') }}">
                    </div>
                    <div class="col-md-4">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        {{ 'description' }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
