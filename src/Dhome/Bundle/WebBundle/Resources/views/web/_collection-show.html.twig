{% extends 'DhomeWebBundle:web:layout.html.twig' %}

{% block head %}
    <title>DDHOMETH : {{ collection.name }}</title>
    <meta name="keywords" content="collection, ddhome, ddhometh, design at home, modern, design, home building">
    <meta name="description" content="{{ collection.shortDescription }}">

    <meta property="fb:app_id" content="314704065533212">
    <meta property="og:title" content="{{ collection.name }}">
    <meta property="og:type" content="object">
    <meta property="og:url" content="{{ path('dhome_web_collection_show', {'id': collection.id, 'name': collection.name|slugify}) }}">
    <meta property="og:image" content="{{ asset('ui/web/img/dhome-logo.png') }}">
    <meta property="og:description" content="{{ collection.shortDescription }}">

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="{{ path('dhome_web_collection_show', {'id': collection.id, 'name': collection.name|slugify}) }}">
    <meta name="twitter:title" content="{{ collection.name }}">
    <meta name="twitter:description" content="{{ collection.shortDescription }}">
    <meta name="twitter:image" content="{{ asset('ui/web/img/dhome-logo.png') }}">
{% endblock %}

{% block content %}

    {% block breadcrumb %}
        <ol class="breadcrumb breadcrumb-dh">
            <li><a href="{{ path('dhome_homepage') }}">Home</a></li>
            <li><a href="{{ path('dhome_web_collection_all_index') }}">Collection</a></li>
            <li class="active">{{ collection.name }}</li>
        </ol>
    {% endblock %}

    <div class="project">
        <div class="project__header">{{ collection.name|upper }}</div>
        {# todo:ถ้าเบียเพิ่มชื่อ cate เข้ามา ให้ใช้ตัวแปร collection.category.name #}
        <div class="row project-show">
            <div class="col-md-6 col-xs-12">
                <div class="project-show-pictures row">

                    <div class="col-xs-12">
                        <ul id="lightSlider">
                            {% for image in collection.images %}
                                <li data-thumb="{{ image.path|imagine_filter('dhome_web_relative') }}">
                                    <img src="{{ image.path|imagine_filter('dhome_web_relative') }}" />
                                </li>
                            {% endfor %}
                        </ul>
                    </div>

                </div>
            </div>
            <div class="col-md-4 col-xs-12 project-show-box">

                <div class="project-show-box__share">
                    <span>Share :</span>
                    <a target="_blank" href="http://www.facebook.com/sharer/sharer.php?u=http://ddhometh.com{{ path('dhome_web_collection_show', {'id': collection.id, 'name': collection.name|slugify}) }}"><i class="fa fa-facebook"></i></a>
                    <a target="_blank" href="https://twitter.com/intent/tweet?original_referer=http://ddhometh.com{{ path('dhome_web_collection_show', {'id': collection.id, 'name': collection.name|slugify}) }}&via=DDHOMETH"><i class="fa fa-twitter"></i></a>
                    <a target="_blank" href="https://plus.google.com/share?url=http://ddhometh.com{{ path('dhome_web_collection_show', {'id': collection.id, 'name': collection.name|slugify}) }}"><i class="fa fa-google-plus"></i></a>
                </div>

                <h4 class="project-show-box__header">{{ collection.shortDescription }}</h4>
                <p class="project-show-box__description">{{ collection.content|raw }}</p>
            </div>
        </div>

    </div>
{% endblock %}
