{% extends 'DhomeWebBundle:web:layout.html.twig' %}

{% block content %}

    {% block breadcrumb %}
        {# todo: add route #}
        {% include 'DhomeWebBundle:web/partials:_breadcrumb.html.twig' %}
    {% endblock %}

    <div class="project">
        <div class="project__header">{{ press.name|upper }}</div>
        {# todo:ถ้าเบียเพิ่มชื่อ cate เข้ามา ให้ใช้ตัวแปร press.category.name #}
        <div class="row project-show">
            <div class="col-md-6 col-xs-12">
                <div class="project-show-pictures row">
                    {% for image in press.images %}
                        {% if loop.index == 1 %}
                            <div class="col-xs-12">
                                <a href="{{ image.path|imagine_filter('dhome_web_relative') }}" data-lightbox="roadtrip">
                                    <img class="img-fluid img-lazy" src="{{ image.path|imagine_filter('dhome_web_relative') }}">
                                </a>
                            </div>
                        {% else %}
                            <div class="col-xs-4 project-show-pictures__t">
                                <a href="{{ image.path|imagine_filter('dhome_web_relative') }}" data-lightbox="roadtrip">
                                    <img class="img-fluid img-lazy" src="{{ image.path|imagine_filter('dhome_web_relative') }}">
                                </a>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>

                <div class="project-show-box__share">
                    <span>Share :</span>
                    <a href="#"><i class="fa fa-facebook"></i></a>
                    <a href="#"><i class="fa fa-twitter"></i></a>
                    <a href="#"><i class="fa fa-google-plus"></i></a>
                </div>
            </div>
            <div class="col-md-4 col-xs-12 project-show-box">
                <h4 class="project-show-box__header">{{ press.shortDescription }}</h4>
                <p class="project-show-box__description">{{ press.content|raw }}</p>
            </div>
        </div>

    </div>
{% endblock %}
