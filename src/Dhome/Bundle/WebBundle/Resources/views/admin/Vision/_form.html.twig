{% form_theme form 'DhomeWebBundle:admin:forms.html.twig' %}

{{ form_errors(form) }}

<div class="row">
    <div class="col-sm-6">
        <span style="color: red;">* </span> {{ 'Title'|trans }}
        <div class="form-title-space">
            {{ form_row(form.title, {label: false}) }}
        </div>
    </div>
    <div class="col-sm-6">
        {{ 'Subtitle'|trans }}
        <div class="form-title-space">
            {{ form_row(form.subTitle, {label: false}) }}
        </div>
    </div>
</div>

<span style="color: red;">* </span> {{ 'Content'|trans }}
<div style="margin-top: 10px;">
    {{ form_row(form.content, {label: false}) }}
</div>

{{ 'Images'|trans }}
{{ form_row(form.images, {label: false}) }}
