{% extends 'DhomeWebBundle:admin:layout.html.twig' %}

{% from 'DhomeWebBundle:admin/Macros:actions.html.twig' import update %}

{% block topbar %}
    <ol class="breadcrumb">
        <li>{{ 'trans.admin.breadcrumb.dashboard'|trans }}</li>
        <li><a href="{{ path('dhome_admin_collections_index') }}">{{ 'Collections'|trans }}</a></li>
        <li>{{ collection.name[:20] ~ '...' }}</li>
        <li class="active">{{ 'trans.admin.edit'|trans }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="page-header">
        <h1><i class="fa fa-pencil"></i> {{ 'Edit collection'|trans }}</h1>
    </div>

    {{ form_start(form, {
        'action': path('dhome_admin_collections_update', {id: collection.id}),
        'method': 'post',
        'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}
    }) }}

    {% include 'DhomeWebBundle:admin/Collection:_form.html.twig' %}

    {{ form_row(form._token) }}
    {{ update() }}
    {{ form_end(form, {'render_rest': false}) }}
{% endblock %}
