{% macro create(url) %}
    <div class="row">
        <div class="form-actions form-action-right">
            <button type="submit" class="btn btn-primary btn-md"><i class="fa fa-check"></i> {{ 'trans.admin.create'|trans }}</button>
            <a href="{{ app.request.headers.get('referer', url) }}" class="btn btn-danger btn-md"><i class="fa fa-close"></i> {{ 'trans.admin.cancel'|trans }}</a>
        </div>
    </div>
{% endmacro %}

{% macro update(url) %}
    <div class="row">
        <div class="form-actions form-action-right">
            <button type="submit" class="btn btn-primary btn-md"><i class="fa fa-save"></i> {{ 'trans.admin.save_change'|trans }}</button>
            <a href="{{ app.request.headers.get('referer', url) }}" class="btn btn-danger btn-md"><i class="fa fa-clos"></i> {{ 'trans.admin.cancel'|trans }}</a>
        </div>
    </div>
{% endmacro %}
