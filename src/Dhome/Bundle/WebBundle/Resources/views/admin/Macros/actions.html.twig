{% macro create(url) %}
<div class="form-actions">
    <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-check"></i> {{ 'Create'|trans }}</button>
    <a href="{{ app.request.headers.get('referer', url) }}" class="btn btn-danger btn-lg"><i class="fa fa-close"></i> {{ 'Cancel'|trans }}</a>
</div>
{% endmacro %}

{% macro update(url) %}
<div class="form-actions">
    <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-save"></i> {{ 'Save changes'|trans }}</button>
    <a href="{{ app.request.headers.get('referer', url) }}" class="btn btn-danger btn-lg"><i class="fa fa-clos"></i> {{ 'Cancel'|trans }}</a>
</div>
{% endmacro %}
