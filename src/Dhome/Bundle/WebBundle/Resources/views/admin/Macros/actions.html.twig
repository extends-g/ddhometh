{% macro create(url) %}
    <div class="form-actions">
        <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-check"></i> {{ 'trans.admin.create'|trans }}</button>
        <a href="{{ app.request.headers.get('referer', url) }}" class="btn btn-danger btn-lg"><i class="fa fa-close"></i> {{ 'trans.admin.cancel'|trans }}</a>
    </div>
{% endmacro %}

{% macro update(url) %}
    <div class="form-actions">
        <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-save"></i> {{ 'trans.admin.save_change'|trans }}</button>
        <a href="{{ app.request.headers.get('referer', url) }}" class="btn btn-danger btn-lg"><i class="fa fa-clos"></i> {{ 'trans.admin.cancel'|trans }}</a>
    </div>
{% endmacro %}
