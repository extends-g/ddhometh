{% macro success(text) %}
<div class="alert alert-success">
    <h4 class="alert-heading">{{ 'Success'|trans }}</h4>
    {{ text }}
</div>
{% endmacro %}

{% macro info(text) %}
<div class="alert alert-info">
    <h4 class="alert-heading">{{ 'Information'|trans }}</h4>
    {{ text }}
</div>
{% endmacro %}

{% macro error(text) %}
<div class="alert alert-danger">
    <h4 class="alert-heading">{{ 'Error'|trans }}</h4>
    {{ text }}
</div>
{% endmacro %}

{% macro warning(text) %}
<div class="alert alert-warning">
    <h4 class="alert-heading">{{ 'Warning'|trans }}</h4>
    {{ text }}
</div>
{% endmacro %}
