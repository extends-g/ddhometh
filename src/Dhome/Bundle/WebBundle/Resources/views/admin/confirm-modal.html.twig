<div class="modal fade" id="confirmation-modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">{{ 'trans.admin.confirmation.title'|trans }}</h4>
            </div>

            <div class="modal-body">
                {{ 'trans.admin.confirmation.message'|trans }}
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i> {{ 'trans.admin.cancel'|trans|upper }}</button>
                <a class="btn btn-danger" id="confirmation-modal-confirm">
                    <i class="glyphicon glyphicon-trash"></i> {{ message is defined ? message : 'trans.admin.delete'|trans|upper }}
                </a>
            </div>
        </div>
    </div>
</div>
