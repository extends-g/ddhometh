<?xml version="1.0" encoding="UTF-8"?>

<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
                                        http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">

    <class name="Dhome\Bundle\AdminBundle\Model\Vision">
        <property name="title">
            <constraint name="NotBlank">
                <option name="message">Title must not blank.</option>
                <option name="groups">dhome</option>
            </constraint>
        </property>
        <property name="content">
            <constraint name="NotBlank">
                <option name="message">Content must not blank.</option>
                <option name="groups">dhome</option>
            </constraint>
        </property>
    </class>

    <class name="Dhome\Bundle\AdminBundle\Model\ProjectCategory">
        <property name="name">
            <constraint name="NotBlank">
                <option name="message">Name must not blank.</option>
                <option name="groups">dhome</option>
            </constraint>
        </property>
    </class>

    <class name="Dhome\Bundle\AdminBundle\Model\Project">
        <property name="name">
            <constraint name="NotBlank">
                <option name="message">Name must not blank.</option>
                <option name="groups">dhome</option>
            </constraint>
        </property>
        <property name="category">
            <constraint name="NotNull">
                <option name="message">Category must not null.</option>
                <option name="groups">dhome</option>
            </constraint>
        </property>
        <property name="content">
            <constraint name="NotBlank">
                <option name="message">Content must not blank.</option>
                <option name="groups">dhome</option>
            </constraint>
        </property>
    </class>

    <class name="Dhome\Bundle\AdminBundle\Model\ProductCollectionCategory">
        <property name="name">
            <constraint name="NotBlank">
                <option name="message">Name must not blank.</option>
                <option name="groups">dhome</option>
            </constraint>
        </property>
    </class>

    <class name="Dhome\Bundle\AdminBundle\Model\ProductCollection">
        <property name="name">
            <constraint name="NotBlank">
                <option name="message">Name must not blank.</option>
                <option name="groups">dhome</option>
            </constraint>
        </property>
        <property name="category">
            <constraint name="NotNull">
                <option name="message">Category must not null.</option>
                <option name="groups">dhome</option>
            </constraint>
        </property>
        <property name="content">
            <constraint name="NotBlank">
                <option name="message">Content must not blank.</option>
                <option name="groups">dhome</option>
            </constraint>
        </property>
    </class>

</constraint-mapping>
